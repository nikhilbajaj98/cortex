# Cortex Environment Configuration
# Copy this file to .env and update the values

# Application
NODE_ENV=development
PORT=8080
LOG_LEVEL=info

# Database Configuration
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=postgres
PG_DATABASE=cortex
PG_MAX_CONNECTIONS=20
PG_IDLE_TIMEOUT=30000
PG_CONNECTION_TIMEOUT=2000

# Kafka Configuration
KAFKA_CLIENT_ID=cortex-service
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=cortex-group
KAFKA_RETRY_TIME=300
KAFKA_RETRIES=5

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=cortex-event-logs

